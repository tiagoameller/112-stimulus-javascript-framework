<h1>Welcome#index</h1>
<p>Find me in app/views/welcome/index.html.erb</p>

<div data-controller='hello'>
  <input data-target='hello.name' type='text'>
  <button data-action='hello#greet'>Greet</button>
</div>

<div data-controller='time'>
  <h1>Display Time</h1>
  <%= time_zone_select "time_zone", "time_zone",
    TZInfo::Timezone.all.sort,
    { include_blank: false },
    { data: { target: 'time.time_zone', action: 'change->time#changed_zone' }} %>

  <h2 data-target='time.display_time'>Time to display</h2>
  <h3 data-target='time.display_time_zone'>Time Zone to display</h3>
  <button data-action='time#set_previous_time_zone'>Previous Time Zone</button>
</div>